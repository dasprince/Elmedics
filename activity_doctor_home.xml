<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorHome">

    <TextView
        android:id="@+id/tvdocname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-44dp"
        android:layout_above="@+id/tvdocname"
        android:layout_centerHorizontal="true"
        android:text="Welcome Dr."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/ivprescriptiondoc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/prescription" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_below="@+id/ivprescriptiondoc"
        android:layout_alignParentStart="true"
        android:text="PRESCRIPTION"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/viewpatientiv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="59dp"
        android:layout_alignTop="@+id/ivprescriptiondoc"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/viewpatient" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_below="@+id/ivprescriptiondoc"
        android:layout_alignParentEnd="true"
        android:text="VIEW PATIENT"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivmyprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="208dp"
        android:layout_alignStart="@+id/ivprescriptiondoc"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/myprofile" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-208dp"
        android:layout_below="@+id/ivmyprofile"
        android:layout_alignStart="@+id/ivprescriptiondoc"
        android:text="MY PROFILE"
        android:textSize="20sp" />
</RelativeLayout>