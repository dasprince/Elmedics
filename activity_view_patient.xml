<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPatient">

    <EditText
        android:id="@+id/etpatmblnumdoc"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-69dp"
        android:layout_above="@+id/etpatmblnumdoc"
        android:layout_alignStart="@+id/etpatmblnumdoc"
        android:text="Enter patient's mobile number" />

    <Button
        android:id="@+id/btnsearchpatdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SEARCH" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Patient's Details"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Name :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvpatnamedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView12"
                android:layout_alignEnd="@+id/textView11"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="112dp"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignParentTop="true"
                android:text="Email :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvpatemaildoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="59dp"
                android:layout_alignTop="@+id/textView14"
                android:layout_alignParentEnd="true"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_centerVertical="true"
                android:text="Mobile number :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvpatmblnumdoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="38dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvpatpresdoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="103dp"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignParentBottom="true"
                android:text="Prescription"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>