<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/loginlogo" />

    <ImageView
        android:id="@+id/ivdoctor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="doctorloginClick"
        app:srcCompat="@drawable/doc" />

    <ImageView
        android:id="@+id/ivpharmacy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/ivdoctor"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/phar" />

    <ImageView
        android:id="@+id/ivpatient"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="14dp"
        android:layout_alignTop="@+id/ivdoctor"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/patient" />

    <TextView
        android:id="@+id/tvdoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="269dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Doctor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvpharmacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvdoctor"
        android:layout_centerHorizontal="true"
        android:text="Pharmacy"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvpatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/tvdoctor"
        android:layout_alignParentEnd="true"
        android:text="Patient"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Not a member yet? JOIN FOR FREE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/ivjoinnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="signupClick"
        app:srcCompat="@drawable/joinbutton" />
</RelativeLayout>